<div class="row">
    <% @listings.each do |listing| %>
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <%= image_tag listing.avatar, class: "card-img-top" %>
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.name%></h5>
                        <p class="card-text menu-description"><%= listing.description%></p>
                        <p class="card-text">$<%= listing.price%>
                            <%= link_to "See More", listing_path(listing.id), method: :get, class: "btn btn-primary btn-right"%>
                        </p>
                        
                    </div>
            </div>
        </div>
    <% end %>
</div>
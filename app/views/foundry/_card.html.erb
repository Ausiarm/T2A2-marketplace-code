<div class="col-md-4">
    <div class="card text-center card-height shadow p-3 mb-5 rounded gradient-custom" style="width: 18rem;" enable-gradients="true" >
        <%= image_tag listing.avatar, class: "card-img-top" %>
            <div class="card-body">
                <h5 class="card-title"><%= listing.name%></h5>
                <p class="card-text">$<%= listing.price%></p>
                <%= link_to "See More", listing_path(listing.id), method: :get, class: "btn btn-primary btn-center"%>
            </div>
    </div>
</div>